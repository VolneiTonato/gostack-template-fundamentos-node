{
    "env": {
        "es2020":true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugins:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"

    ],
    "rules": {
      "import/extensions":[
        "error",
        "inorePackages",
        {
          "ts":"never"
        }
      ],
      "prettier/prettier": "error"
    },
    "settings": {
      "import/resolver":{
        "typescript":{}
      }
    }
}
